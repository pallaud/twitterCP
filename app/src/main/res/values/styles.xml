<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="twitterBlack">#292f33</item>
        <item name="twitterBlue">#55acee</item>
        <item name="twitterGray">#66757f</item>
        <item name="twitterWhite">#ffffff</item>
        <item name="android:buttonStyle">@style/TwitterButton</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>
    </style>
    
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:shadowColor">#aab8c2</item>
    </style>

    <style name="MyActionBarWidgetTheme" parent="@android:style/Theme.Holo">
        <item name="android:textColor">#55acee</item>
    </style>

    <style name="TwitterButton" parent="android:Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?attr/twitterBlue</item>
    </style>

</resources>
